
@{
    Layout = "_Layout";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card " style="border:none !important;">
        <div class="card-body ">

            <form class="forms-sample" method="post" asp-action="AddProduct" asp-controller="Product">
                <div class="form-group">
                    <label for="prod">Product Name</label>
                    <input name="ProductName" type="text" class="form-control" id="prod" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="qua">Quantity</label>
                    <input name="Quantity" type="number" class="form-control" id="qua" placeholder="Quantity">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input name="Price" type="number" class="form-control" id="price" placeholder="Price">
                </div>
                <div class="form-group">
                    <label for="cate">Date</label>
                    <input name="CreatedTime" type="text" class="form-control" id="date" placeholder="Date">
                </div>
                <div class="form-group">
                    <label for="cate">Category</label>
                    <input name="CategoryId" type="number" class="form-control" id="cate" placeholder="Category">
                </div>
                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input"> Remember me
                    </label>
                </div>
                <button class="btn btn-primary mr-2 ">Submit</button>
                
            </form>
        </div>
    </div>
</div>

