@using Entities.Concrete
@model List<Category>

   
@*   <div class="container-scroller">*@

      
            <div class="content-wrapper p-4">

        <div class="row  p-0">
        <div class="col-lg-12  stretch-card">
            <div class="card p-0" style="border:none !important;">
                <div class="card-body">
                   
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="font-weight-bolder bg-secondary " >
                                <tr>
                                    <th>Id  </th>
                                    <th>CategoryName</th>
                                    <th></th>
                                    
                                </tr>
                            </thead>
                            @foreach(var item in Model) {
                            <tbody>
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.CategoryName</td>

                                        <td>
                                            <a class="btn btn-danger" asp-action="DeleteCategoryById" asp-controller="Category" asp-route-id="@item.CategoryId">Delete</a>
                                                        <a class="btn btn-warning" asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.CategoryId">Update</a></td>
                                                   
                                     
                                    
                                </tr>
                               
                            </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>




        </div>
    </div>
</div>
